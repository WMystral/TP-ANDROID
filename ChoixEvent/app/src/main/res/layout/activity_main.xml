<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.maumene.choixevent.MainActivity">

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/layoutbutton"
        android:orientation="vertical">
        <RadioButton android:id="@+id/croix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/croix"
            />
        <RadioButton android:id="@+id/carre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carre"
            />
        <RadioButton android:id="@+id/rond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rond"
            />
        <RadioButton android:id="@+id/triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/triangle"
            />
    </RadioGroup>

    <com.example.maumene.choixevent.Forme
        android:id="@+id/formo"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layoutbutton" />

</LinearLayout>